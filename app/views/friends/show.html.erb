<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="..." class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <p style="color: green"><%= notice %></p>
        <%= render @friend %>
        <h5 class="card-title"></h5>
        <p class="card-text"></p>
      </div>
    </div>
  </div>
</div>
<div>
  <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-sm btn-warning" %> |
  <%= link_to "Back", friends_path, class:"btn btn-sm btn-secondary" %> | <%= button_to "Delete", @friend, method: :delete, class:"btn btn-sm btn-danger" %>
</div>
